<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Relatório do Supervisor</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Estatística de frequência dos grupos
				<%= @report.average(@user) %>
			</div>	
			<div class="panel-body">
				<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th>Nome do dirigente</th>
								<th>Crianças até 11 anos</th>
								<th>Adol. de 12 a 14 anos</th>
								<th>Adol. de 15 a 17 anos</th>
								<th>Homens Solteiros</th>
								<th>Homens Casados</th>
								<th>Melheres Solteiras</th>
								<th>Melheres Casadas</th>
								<th>Total</th>

							</tr>
						</thead>
						<tbody>
							<% @report.leaders.each do |leader| %>
							<tr>
								<td><%= leader.name %></td>
								<% @report.peoples_in_meeting(leader).each_with_index do |c, i| %>

								<td class="col-md-12"><%= c.first["c"] %></td>
								<td><%= c.first["a"] %></td>
								<td><%= c.first["aa"] %></td>
								<td class="col-md-12"><%= c.first["ms"] %></td>
								<td class="col-md-12"><%= c.first["mm"] %></td>
								<td class="col-md-12"><%= c.first["sw"] %></td>
								<td class="col-md-12"><%= c.first["wf"] %></td>
								<td class="col-md-12"><%= c.first["tt"] %></td>
								<% end %>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>	
	</div>
</div>