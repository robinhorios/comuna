<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Lista de Eventos</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
	<div class="col-lg-12"><div class="panel panel-default">

		<!-- /.panel-heading -->
		<div class="panel-body">
			<div class="dataTable_wrapper">
				<table class="table table-striped table-bordered table-hover" id="dataTables-example">
					<thead>
						<tr>
							<th>Nome</th>
							<th>Dia do Evento</th>
							<th>Horário</th>
							<th>Ações</th>
						</tr>
					</thead>
					<tbody>
						<% @events.each do |event| %>
						<tr>
							<td><%= event.name %></td>
							<td><%= event.event_day %></td>
							<td><%= event.schedule %></td>
							<td>
								<%= link_to "Remove", event, method: :delete, data: { confirm: "Are you sure?" } %>
								<%= link_to "Editar", action: "edit", id: event.id %>
								<%= link_to "Delete", {:action => 'destroy', method: "delete", :id => @events},
								:confirm => "Are you sure you want to delete this item?" %>
							</td>
						</tr>

						<% end %>
					</tbody>



				</table>
				<table class="table">
					<tr>
						<td>
							<%= link_to "Criar novo Evento", {:controller => "events", :action => "new"}, :class => "btn btn-primary dropdown-toggle btn-sm" %>
						</td>
					</tr>
				</table>

			</div>
		</div>
	</div>
</div>
</div>


