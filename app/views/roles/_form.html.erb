<% if @role.errors.any? %>
<ul>
	<% @role.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<div class="container">
	<%= form_for @role, :html => {:class => "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label :name, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :name, {:class => "form-control"} %>	
		</div>
	</div>

	<div class="form-group">
		<%= f.label :role_id, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.submit 'Enviar', :class => 'btn btn-default'  %>
		</div>
	</div>

	<% end %>
	<hr/>
	<%= link_to "Voltar", :controller => "roles", :action => "index" %>
</div>


