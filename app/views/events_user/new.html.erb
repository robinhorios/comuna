<% if @events_user.errors.any? %>
<ul>
	<% @events_user.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<div class="container">
	<%= form_for @events_user, url: {controller: "events_user"},:html => {:class => "form-horizontal"} do |f| %>

	<div class="form-group">
		<%= f.label :event_id, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.select(:event_id, @events.collect {|s| [s.name, s.id]})%>
		</div>
	</div>

	<div class="form-group">

	<%= f.label :user_id, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.select(:user_id, @users.collect {|s| [s.name, s.id]})%>
			<br/>
			<br/>
			<%= f.submit 'Enviar', :class => 'btn btn-default'  %>
		</div>
	</div>

	<% end %>
	<hr/>
	<%= link_to "Voltar", :controller => "users", :action => "index" %>
</div>


