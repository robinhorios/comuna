<h1>Lista de Usuários</h1>


<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome</th>
			<th>E-mail</th>
			<th>Telefone</th>
			<th>Operadora</th>
			<th>Endereço</th>
			<th>Data de Aniversário</th>
			<th>GCEM</th>
			<th>Ações</th>
		</tr>
	</thead>
	<tbody>
		<% @user.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= user.phone %></td>
			<td><%= user.operator %></td>
			<td><%= user.address %></td>
			<td><%= user.date_of_birth %></td>
			<td><%= user.gcem.name %></td>
			<td>
				<%= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" } %>
				<%= link_to "Editar", action: "edit", id: @user %>
				<%= link_to "Delete", {:action => 'destroy', method: "delete", :id => @user},
				:confirm => "Are you sure you want to delete this item?" %>
			</td>
		</tr>
		
		<% end %>
	</tbody>
	

	
</table>
<table class="table">
	<tr>
			<td>
				<%= link_to "Criar novo membro", {:controller => "users", :action => "new"}, :class => "btn btn-primary dropdown-toggle btn-sm" %>
			</td>
		</tr>
</table>


