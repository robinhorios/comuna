<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Usuários</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			
			<!-- /.panel-heading -->
			<div class="panel-body">
				<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th>Nome</th>
								<th>E-mail</th>
								<th>Telefone</th>
								<th>Endereço</th>
								<th>Data de Aniversário</th>
								<th>Encargo</th>
								<th>Célula</th>
								<th>Ações</th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
							<tr>
								<td><%= user.name %></td>
								<td><%= user.email %></td>
								<td><%= user.phone %></td>
								<td><%= user.street %></td>
								<td><%= user.date_of_birth %></td>
								<td><%= user.role %></td>
								<td>
									<%= link_to "Ver", action: "show", id: user.id %>
									<%= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" } %>
									<%= link_to "Editar", action: "edit", id: user.id %>
									<%= link_to "Deletar", {:action => 'destroy', method: "delete", :id => user.id},
									:confirm => "Are you sure you want to delete this item?" %>
								</td>
							</tr>
							<% end %>
						</tbody>



					</table>
				</div>
			</div>
		</div>
	</div>
</div>

<table class="table">
	<tr>
		<td>
			<%= link_to "Criar novo membro", {:controller => "users", :action => "new"}, :class => "btn btn-primary dropdown-toggle btn-sm" %>
		</td>
	</tr>
</table>


