<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for(@user) do |f| %>
<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
</p>
<p>
	<%= f.label :address %>
	<%= f.text_field :address %>
</p>
<p>
	<%= f.label :phone %>
	<%= f.text_field :phone %>
</p>
<p>
	<%= f.label :operator %>
	<%= f.text_field :operator %>
</p>
<p>
	<%= f.label :date_of_birth %>
	<%= f.date_select :date_of_birth, :start_year => 1900, :order => [:day, :month, :year] %>
</p>
<p>
	<%= f.label :gcem_id %>
	<%= f.collection_select(:gcem_id, Gcem.order(:name),
                                    :id, :name, :prompt => true) %>
</p>
<p>
	<%= f.submit %>
</p>


<% end %>
