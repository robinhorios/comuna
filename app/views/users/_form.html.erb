<% if @user.errors.any? %>
<ul>
	<% @user.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>


<div class="container">
	<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label :name, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :name, {:class => "form-control"} %>	
		</div>
	</div>
	<div class="form-group">
		<%= f.label :email, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :email, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :address, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :address, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :phone, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :phone, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :operator, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :operator, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :date_of_birth, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.date_select :date_of_birth, :start_year => 1900, :order => [:day, :month, :year], class: "form-control" %>
		</div>
	</div>
	
	<div class="form-group">
		<% Cell.all.each do |cell| %>
		<%= check_box_tag "user[cell_ids][]", cell.id, @user.cell_ids.include?(cell.id), id: dom_id(cell) %>
		<%= label_tag dom_id(cell), cell.name %><br>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label :role_id, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.select(:role_id, @roles.collect {|s| [s.name, s.id]})%>
			<br/>
			<br/>
			<%= f.submit 'Enviar', :class => 'btn btn-default'  %>
		</div>
	</div>
	<% end %>
	<hr/>
	<%= link_to "Voltar", :controller => "users", :action => "index" %>
</div>







