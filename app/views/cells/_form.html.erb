
<div class="container">
	<%= form_for @cell, :html => {:class => "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label :name, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :name, {:class => "form-control"} %>	
		</div>
	</div>
	<div class="form-group">
		<%= f.label :street, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :street, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :schedule, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :schedule, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :host, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :host, {:class => "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :week_day, {:class => "col-sm-2 control-label"} %>
		<div class="col-sm-10">
			<%= f.text_field :week_day, {:class => "form-control"} %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-10">
			<%= f.submit 'Enviar', :class => 'btn btn-default'  %>
		</div>
	</div>
	<% end %>
	<hr/>
	<%= link_to "Voltar", :controller => "cells", :action => "index" %>
</div>

