
<div class="row">
	<div class="col-lg-12">
		<h1>Perfil da Célula <%= @cell.name %></h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Dados
			</div>	
			<div class="panel-body">
				<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th>Nome</th>
								<th>Horário</th>
								<th>Anfitrião</th>
								<th>Dia da semana</th>
								<th>Número de membros</th>
								<th>Categoria</th>
								<th>Ações</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									<%= @cell.name %>
								</td>
								<td>
									<%= @cell.schedule %>
								</td>
								<td>
									<%= @cell.host %>
								</td>
								<td>
									<%= @cell.week_day %>
								</td>
								<td>
									<%= @cell.total_members %>
								</td>
								<td>
									<%= @cell.category %>
								</td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>	
	</div>
</div>

<div class="row">
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				Estrutura de Liderança
			</div>
			<div class="panel-body">
				<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th>Supervisor de Distrito</th>
								<th>Supervisor de Área</th>
								<th>Supervisor</th>
								<th>Líder</th>
								<th>Auxiliar</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
								<%= @cell.members_by_role(User::DistrictSupervisor) %>
								</td>
								<td>
									<%= @cell.members_by_role(User::AreaSupervisor) %>
								</td>
								<td>
									<%= @cell.members_by_role(User::Supervisor) %>
								</td>
								<td>
									<%= @cell.members_by_role(User::Leader) %>
								</td>
								<td>
									<%= @cell.members_by_role(User::Assist) %>
								</td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				Membros
			</div>
			<div class="panel-body">
				<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th>Nome</th>
								<th>Encargo</th>
							</tr>
						</thead>
						<tbody>
							<% @cell.users.each do |user| %>
							<tr>
								<td>
									<%= user.name %>
								</td>
								<td>
									<%= user.role %>
								</td>
							</tr>
							<% end %>
							

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	
</div>



